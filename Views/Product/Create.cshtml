@model ProjectRpl.Models.Product

@{
    Layout = "_Layout";
}

<h2>Form Tambah Product</h2>
<br/>
<a asp-action="Index" class="btn btn-success btn-xs">Tampilkan Product</a>
<br/>

<div class="row">
@if(ViewData["pesan"]!=null)
{
    @Html.Raw(ViewData["pesan"])
}
<br/><br/>
</div>


<div class="col-md-6">
    <form asp-action="CreatePost">
        <div class ="form-group">
            <label asp-for="Id_Product">Id_Product :</label>
            <input asp-for="Id_Product" class="form-control"/>
        </div> 
        <div class ="form-group">
            <label asp-for="Nama_Product">Nama_Product :</label>
            <input asp-for="Nama_Product" class="form-control"/>
        </div>
        <div class ="form-group">
            <label asp-for="deskripsi">deskripsi :</label>
            <input asp-for="deskripsi" class="form-control"/>
        </div>
        <div class ="form-group">
            <label asp-for="stok">stok :</label>
            <input asp-for="stok" class="form-control"/>
        </div>
        <div class ="form-group">
            <label asp-for="harga">harga :</label>
            <input asp-for="harga" class="form-control"/>
        </div>
        <div class ="form-group">
            <label asp-for="image">image :</label>
            <input asp-for="image" class="form-control"/>
        </div>
        <div class ="form-group">
            <label asp-for="Id_Kategori">Id_Kategori :</label>
            <input asp-for="Id_Kategori" class="form-control"/>
        </div>
        <div calss="form-group">
            <input type="submit" value="Submit" class="btn btn-primary"/>
            </div>
